<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto">
    <a class="btn btn-outline-dark" href="/boards/new">新規作成</a>
  </div>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @board.each do |board| %>
    <tr>
      <th><%= board.id %></th>
      <td><%= board.title %></td>
      <td><%= board.name %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

