<h2>編集画面</h2>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field:title %>

  <h4>本文</h4>
  <%= f.text_area:body %>

  <h4>画像</h4>
  <%= f.attachment_field :image %>

  <div>
    <%= f.submit "保存" %>
  </div>
<% end %>
<p>
  <%= link_to "ルートTOP", "/" %>
</p>
